<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.miscorf.dao.BookMapper">
    <insert id="addBook"  parameterType="Books" >
        insert into community.books (bookName, bookCounts, detail)
        values (#{bookName},#{bookCounts},#{detail});
    </insert>

    <delete id="deleteBookById" parameterType="int" >
        delete from community.books where  bookID = #{bookID}
    </delete>

    <update id="updateBook" parameterType="Books">
        update community.books
        set bookName = #{bookName} ,bookCounts=#{bookCounts},detail=#{detail}
        where bookID = #{bookID} ;
    </update>

    <select id="queryBookById" resultType="Books">
        select * from community.books  where bookID=#{bookID};
    </select>

    <select id="queryAllBook"  resultType="Books">
        select * from community.books
    </select>
</mapper>
